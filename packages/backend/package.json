{
  "name": "@brainwave/backend",
  "version": "1.0.0",
  "description": "Provide clean REST and interface for collecting and following up on thoughts",
  "main": "dist/index.js",
  "repository": "git@github.com:aomdoa/brainwave.git",
  "author": "David Shurgold <aomdoa@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "yarn rimraf ./dist ./build ./coverage",
    "dev": "yarn prisma:generate && nodemon --watch src --ext ts --exec tsx src/index.ts",
    "start": "node dist/index.js",
    "lint": "yarn eslint --ext .ts ./src",
    "spell": "cspell ./src/**/*.ts",
    "pretty": "prettier --write ./src/**/*.ts",
    "test": "jest",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "export DATABASE_URL=file:$(pwd)/dev.db && prisma migrate --config prisma/prisma.config.mjs dev --preview-feature",
    "prisma:studio": "export DATABASE_URL=file:$(pwd)/dev.db && prisma studio --config prisma/prisma.config.mjs",
    "build": "yarn clean && yarn test && yarn lint && yarn pretty && yarn spell && yarn prisma:generate && node _scripts/build.mjs && tsc",
    "package": "node _scripts/package.mjs"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@jest/globals": "^30.2.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.2.2",
    "@types/pino": "^7.0.5",
    "cspell": "^9.6.4",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.13",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsc": "^2.0.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  },
  "dependencies": {
    "@prisma/adapter-better-sqlite3": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "@types/ms": "^2.1.0",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "ms": "^2.1.3",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "prisma": "^7.4.0",
    "sqlite3": "^5.1.7",
    "zod": "^4.3.6"
  }
}
